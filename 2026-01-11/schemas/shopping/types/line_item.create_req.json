{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ucp.dev/schemas/shopping/types/line_item.create_req.json",
  "title": "Line Item Create Request",
  "type": "object",
  "description": "Line item object. Expected to use the currency of the parent object.",
  "required": [
    "item",
    "quantity"
  ],
  "properties": {
    "item": {
      "$ref": "https://ucp.dev/schemas/shopping/types/item.create_req.json"
    },
    "quantity": {
      "type": "integer",
      "description": "Quantity of the item being purchased.",
      "minimum": 1
    }
  }
}