{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ucp.dev/schemas/shopping/types/fulfillment.json",
  "title": "Fulfillment Response",
  "description": "Container for fulfillment methods and availability.",
  "type": "object",
  "properties": {
    "methods": {
      "type": "array",
      "description": "Fulfillment methods for cart items.",
      "items": {
        "$ref": "https://ucp.dev/schemas/shopping/types/fulfillment_method.json"
      }
    },
    "available_methods": {
      "type": "array",
      "description": "Inventory availability hints.",
      "items": {
        "$ref": "https://ucp.dev/schemas/shopping/types/fulfillment_available_method.json"
      }
    }
  }
}